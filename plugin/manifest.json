{
    "manifest_version": 2,

    "name": "Wrongmove",
    "description": "Rightmove on steroids",
    "version": "1.0",

    "permissions": [
        "http://www.rightmove.co.uk/",
        "http://www.zoopla.co.uk/",
        "http://chromeplugin.herokuapp.com/",
        "<all_urls>"
    ],

    "content_scripts": [
        {
            "matches": ["http://www.rightmove.co.uk/*"],
            "css": ["css/rightmove.css"],
            "js": ["js/jquery.js", "js/rightmove.js"]
        },
        {
            "matches": ["http://www.zoopla.co.uk/*"],
            "css": ["css/zoopla.css"],
            "js": ["js/jquery.js", "js/zoopla.js"]
        }
    ],

    "background": {
        "scripts": ["js/jquery.js", "js/background.js"],
        "persistent": true
    }

}